//- signup.pug
extends layout

block content
  .container.mt-5
    h2.text-center Sign Up
    form(method='POST', action='/auth/signup')
      .form-group
        label(for='name') Name:
        input.form-control(type='text', name='name', id='name', required=true)
      .form-group
        label(for='email') Email:
        input.form-control(type='email', name='email', id='email', required=true)
      .form-group
        label(for='password') Password:
        input.form-control(type='password', name='password', id='password', required=true)
      button.btn.btn-primary(type='submit') Sign Up

    if error
      .alert.alert-danger #{error}
