extends layout

block content
  .container.mt-5
    h1.text-center Create a New Hotel

    form(action='/create', method='POST')
      .form-group
        label(for='_id') Hotel ID:
        input.form-control(type='number', id='_id', name='_id', required=true)

      .form-group
        label(for='name') Hotel Name:
        input.form-control(type='text', id='name', name='name', required=true)

      .form-group
        label(for='image') Hotel Image URL:
        input.form-control(type='text', id='image', name='image', required=true)

      .form-group
        label(for='description') Hotel Description:
        textarea.form-control(id='description', name='description', rows='4', required=true)

      .form-group
        label(for='rating') Rating (out of 5):
        input.form-control(type='number', id='rating', name='rating', min='1', max='5', step='0.1', required=true)

      .form-group
        label(for='reviews') Hotel Reviews (comma separated):
        textarea.form-control(id='reviews', name='reviews', rows='2')

      button.btn.btn-primary(type='submit') Create Hotel
