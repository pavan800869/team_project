extends layout

block content
  .container.mt-5
    h1.text-center Welcome to Our Hotel Booking System
    p.text-center Browse our hotels and book your stay today!

    // Add the Create Hotel button
    .text-center.mb-4
      a.btn.btn-success(href='/createHotel') Create New Hotel

    .row
      each hotel in hotels
        .col-md-4
          .card.mb-4.shadow-sm
            img.card-img-top(src=hotel.image, alt=hotel.name, class='hotel-img')
            .card-body
              h5.card-title= hotel.name
              p.card-text
                | #{hotel.description}
              .d-flex.justify-content-between.align-items-center
                span.badge.badge-success Rating: #{hotel.rating}/5
                a.btn.btn-primary(href=`/booking/${hotel._id}`) Book Now
